#!/usr/bin/env bash
set -e

for i in "$@"; do
    if [ -f "${i%.*}.info.json" ]; then
        AtomicParsley "$i" --overWrite --meta-uuid json file "${i%.*}.info.json" >/dev/null 2>&1
        if command -v jq >/dev/null 2>&1; then
            date=$(jq -r .upload_date "${i%.*}.info.json")
            if [[ "$date" != 'null' ]]; then
                touch -d "$date" "$i"
            fi
        fi
        rm "${i%.*}.info.json"
    fi
done
