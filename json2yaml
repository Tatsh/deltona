#!/usr/bin/env python
import json
import sys

import yaml


def yaml_dump(s):
    return yaml.dump(s, default_flow_style=False, indent=4)


if __name__ == '__main__':
    # argv mode
    if len(sys.argv) >= 2:
        for arg in sys.argv[1:]:
            try:
                with open(arg, 'rb') as f:
                    print(yaml_dump(json.loads(f.read().strip())))
            except FileNotFoundError:
                sys.exit(1)
        sys.exit(0)
    # stdin mode
    for arg in sys.stdin.readlines():
        print(yaml_dump(json.loads(arg.strip())))
